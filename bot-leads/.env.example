# 🔑 Token gerado na API do WhatsApp (Facebook Developers / Meta)
WHATSAPP_TOKEN=your_whatsapp_token_here

# 📱 ID do número de telefone configurado na API do WhatsApp
WHATSAPP_PHONE_ID=your_phone_id_here

# 🔒 Token usado para verificar o Webhook no setup da API do WhatsApp
VERIFY_TOKEN=meu-token-de-verificacao-local

# 🌍 Chave de API do Google (ex: para usar Google Maps)
GOOGLE_API_KEY=your_google_maps_api_key_here

# ⚙️ Porta onde a aplicação vai rodar (Render ou local)
PORT=3000
